<style>
body{
    background-color: #101010;
    font-family: sans-serif;
}
.faq__ques{
    font-size: 24px;
    color: #fff;
    border-bottom: 1px solid #91929A;
    position: relative;
    padding: 20px 30px 20px 0;
    
}
.faq__ques::after, .faq__ques::before {
    content: "";
    transition: 0.3s;
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    height: 3px;
    width: 20px;
    border-radius: 10px;
    background-color: #91929A;
  }
  .faq__ques.active::after, .faq__ques.active::before {
    background-color: #fff;
  }
  .faq__ques.active::before {
    transform: translateY(-50%) rotate(270deg);
  }
  .faq__ans {
    transition: 0.3s;
    height: 0;
    overflow: hidden;
    font-size: 18px;
    color: #91929A;
  }

</style>

<script >
    'use strict';
    window.addEventListener('DOMContentLoaded', function() {
        let faqQues = document.querySelectorAll('.faq__ques');
        function removeClass(){
            for (let i of faqQues) {
                i.classList.remove("active");
                i.nextElementSibling.setAttribute("style", `height: 0px;opacity:0;`);
            }
        }
        for (let i of faqQues) {
            i.addEventListener('click', ()=>{
                if(i.classList.contains("active")){
                    removeClass();    
                }else{
                    removeClass();    
                    let height = i.nextElementSibling.scrollHeight;
                    i.classList.add("active");
                    i.nextElementSibling.setAttribute("style", `height: ${height}px;opacity:1;`);
                }
            });
        }
    });
   
    
</script>
